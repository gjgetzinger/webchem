citHeader("To cite webchem in publications use:")

citEntry(entry = "Manual",
  title        = "{webchem}:  retrieve chemical information from the web",
  author       = personList(as.person("Eduard Szöcs")),
  journal      = "Zenodo",
  year         = "2015",
  url          = "http://dx.doi.org/10.5281/zenodo.33823",

  textVersion  =
  paste("Eduard Szöcs et al. (2015). webchem: zenodo release. ",
        "Zenodo. 10.5281/zenodo.33823")
)

citFooter("In addition to citing webchem in publications, please check attribution guidelines for any data sources you accessed.  Links to documentation can be found in help files for webchem functions")
